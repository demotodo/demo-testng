<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestNG" verbose="1" thread-count="4" data-provider-thread-count="4">

    <listeners>
        <listener class-name="com.demotodo.example.testng.MyTestListener"/>
    </listeners>

    <test name="FirstTry" parallel="classes" thread-count="10">
        <classes>
            <class name="com.demotodo.example.testng.FirstTry"/>
        </classes>
    </test>

</suite>
